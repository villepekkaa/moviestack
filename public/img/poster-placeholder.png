<svg xmlns="http://www.w3.org/2000/svg" width="500" height="750" viewBox="0 0 500 750" role="img" aria-label="Poster placeholder">
  <defs>
    <linearGradient id="g" x1="0" x2="1" y1="0" y2="1">
      <stop offset="0" stop-color="#e6e6e6"/>
      <stop offset="1" stop-color="#cccccc"/>
    </linearGradient>
    <linearGradient id="shine" x1="0" x2="1">
      <stop offset="0" stop-color="#ffffff" stop-opacity="0.7"/>
      <stop offset="0.6" stop-color="#ffffff" stop-opacity="0.15"/>
      <stop offset="1" stop-color="#ffffff" stop-opacity="0"/>
    </linearGradient>
    <filter id="soft" x="-20%" y="-20%" width="140%" height="140%">
      <feGaussianBlur in="SourceGraphic" stdDeviation="2"/>
    </filter>
  </defs>

  <!-- Poster background -->
  <rect width="100%" height="100%" rx="12" ry="12" fill="url(#g)"/>

  <!-- subtle vignette -->
  <rect width="100%" height="100%" rx="12" ry="12" fill="black" opacity="0.06"/>

  <!-- shining gloss -->
  <rect x="0" y="0" width="100%" height="100%" rx="12" ry="12" fill="url(#shine)" />

  <!-- Camera / film icon -->
  <g transform="translate(120,170)" fill="#222" opacity="0.95">
    <rect x="40" y="40" width="200" height="140" rx="6" ry="6" fill="#111"/>
    <rect x="52" y="52" width="176" height="116" rx="4" ry="4" fill="#2b2b2b"/>
    <!-- lens -->
    <circle cx="140" cy="110" r="28" fill="#0f0f0f"/>
    <circle cx="140" cy="110" r="16" fill="#2b2b2b"/>
    <circle cx="140" cy="110" r="5" fill="#6b6b6b"/>
    <!-- film sprockets -->
    <g fill="#111">
      <rect x="20" y="60" width="18" height="18" rx="3" ry="3"/>
      <rect x="20" y="98" width="18" height="18" rx="3" ry="3"/>
      <rect x="268" y="60" width="18" height="18" rx="3" ry="3"/>
      <rect x="268" y="98" width="18" height="18" rx="3" ry="3"/>
    </g>
    <!-- small top flash -->
    <rect x="200" y="8" width="40" height="28" rx="4" ry="4" fill="#141414"/>
  </g>

  <!-- Text: No poster -->
  <g transform="translate(0,430)" fill="#333" font-family="Inter, Arial, Helvetica, sans-serif" text-anchor="middle">
    <text x="50%" y="0" font-size="20" font-weight="600">No poster</text>
    <text x="50%" y="28" font-size="13" opacity="0.85">Available</text>
  </g>

  <!-- subtle border -->
  <rect x="1" y="1" width="498" height="748" rx="11" ry="11" fill="none" stroke="#00000015" />

  <!-- accessibility: fallback title/desc -->
  <title>Poster placeholder</title>
  <desc>Generic poster placeholder image used when no poster is available.</desc>
</svg>
